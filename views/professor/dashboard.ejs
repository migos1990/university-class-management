<%- include('../partials/header') %>

<div class="page-header">
  <h1 class="page-title">My Classes</h1>
  <p class="page-subtitle">Manage your classes and student enrollments</p>
</div>

<div class="card">
  <h2>All Classes</h2>

  <% if (classes.length === 0) { %>
    <div style="text-align: center; padding: 3rem; color: #666;">
      <div style="font-size: 3rem; margin-bottom: 1rem;">ðŸ“š</div>
      <p>No classes available.</p>
    </div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Code</th>
          <th>Class Name</th>
          <th>Semester</th>
          <th>Students</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% classes.forEach(classItem => { %>
          <tr>
            <td><strong><%= classItem.code %></strong></td>
            <td><%= classItem.name %></td>
            <td><%= classItem.semester %></td>
            <td>
              <span style="background: #e3f2fd; padding: 4px 12px; border-radius: 4px; color: #1565c0;">
                <%= classItem.enrolled_count %> enrolled
              </span>
            </td>
            <td>
              <a href="/classes/<%= classItem.id %>" class="btn btn-primary" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;">
                View Details
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('../partials/footer') %>
