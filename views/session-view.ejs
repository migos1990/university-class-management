<%- include('partials/header') %>

<a href="/classes/<%= session.class_id %>" style="text-decoration: none; color: #3498db;">&larr; <%= t('classes.backToClass') %></a>

<div class="card" style="margin-top: 1rem;">
  <div style="display: flex; justify-content: space-between; align-items: start;">
    <div>
      <div style="color: #666; font-size: 0.9rem; margin-bottom: 0.25rem;">
        <%= session.class_code %>: <%= session.class_name %> - Session <%= session.session_number %>
      </div>
      <h1><%= session.title %></h1>
    </div>
    <% if (canEdit) { %>
      <a href="/sessions/<%= session.id %>/edit" class="btn btn-secondary"><%= t('sessions.editSession') %></a>
    <% } %>
  </div>

  <% if (session.date) { %>
    <div style="color: #666; margin-top: 0.5rem;">
      ðŸ“… <%= session.date %>
    </div>
  <% } %>
</div>

<% if (session.description) { %>
  <div class="card">
    <h2><%= t('sessions.description') %></h2>
    <p style="color: #555; line-height: 1.8;"><%= session.description %></p>
  </div>
<% } %>

<div class="card">
  <h2><%= t('sessions.content') %></h2>
  <div style="color: #333; line-height: 1.8; white-space: pre-wrap;"><%= session.content || t('sessions.noContent') %></div>
</div>

<%- include('partials/footer') %>
