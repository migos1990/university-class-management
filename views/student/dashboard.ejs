<%- include('../partials/header') %>

<div class="page-header">
  <h1 class="page-title"><%= t('dashboard.student.enrolledClasses') %></h1>
  <p class="page-subtitle"><%= t('dashboard.student.viewGrades') %></p>
</div>

<div class="card">
  <h2><%= t('dashboard.student.enrolledClasses') %></h2>

  <% if (enrollments.length === 0) { %>
    <div style="text-align: center; padding: 3rem; color: #666;">
      <div style="font-size: 3rem; margin-bottom: 1rem;">ðŸ“š</div>
      <p><%= t('dashboard.student.noEnrollments') %></p>
    </div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th><%= t('classes.code') %></th>
          <th><%= t('classes.name') %></th>
          <th><%= t('classes.semester') %></th>
          <th><%= t('dashboard.student.grade') %></th>
          <th><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% enrollments.forEach(enrollment => { %>
          <tr>
            <td><strong><%= enrollment.code %></strong></td>
            <td><%= enrollment.name %></td>
            <td><%= enrollment.semester %></td>
            <td>
              <% if (enrollment.grade) { %>
                <span style="background: #d4edda; padding: 4px 12px; border-radius: 4px; color: #155724; font-weight: 600;">
                  <%= enrollment.grade %>
                </span>
              <% } else { %>
                <span style="background: #fff3cd; padding: 4px 12px; border-radius: 4px; color: #856404;">
                  <%= t('dashboard.student.inProgress') %>
                </span>
              <% } %>
            </td>
            <td>
              <a href="/classes/<%= enrollment.class_id %>" class="btn btn-primary" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;">
                <%= t('dashboard.professor.viewDetails') %>
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</div>

<div class="card">
  <h2><%= t('dashboard.student.aboutPlatform') %></h2>
  <p style="color: #666; line-height: 1.6;">
    <%= t('dashboard.student.aboutText') %>
  </p>
</div>

<%- include('../partials/footer') %>
