<div class="grid-2">
  <div class="card">
    <h2>Quick Actions</h2>
    <div style="display: flex; flex-direction: column; gap: 0.75rem;">
      <a href="/admin/security" class="btn btn-primary" style="text-align: center;">Security Settings</a>
      <a href="/admin/audit-logs" class="btn btn-secondary" style="text-align: center;">View Audit Logs</a>
      <a href="/admin/mfa-setup" class="btn btn-secondary" style="text-align: center;">Configure MFA</a>
      <a href="/admin/backups" class="btn btn-secondary" style="text-align: center;">Database Backups</a>
    </div>
  </div>

  <div class="card">
    <h2>Recent Logins</h2>
    <% if (stats.recentLogins.length === 0) { %>
      <p style="color: #999;">No recent logins recorded</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Role</th>
            <th>Last Login</th>
          </tr>
        </thead>
        <tbody>
          <% stats.recentLogins.forEach(login => { %>
            <tr>
              <td><%= login.username %></td>
              <td style="text-transform: capitalize;"><%= login.role %></td>
              <td><%= login.last_login ? new Date(login.last_login).toLocaleString() : 'Never' %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>

