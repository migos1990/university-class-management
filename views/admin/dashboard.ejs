<%- include('../partials/header') %>

<div class="page-header">
  <h1 class="page-title"><%= t('dashboard.admin.title') %></h1>
  <p class="page-subtitle"><%= t('dashboard.admin.systemOverview') %></p>
</div>

<div class="grid-4" style="margin-bottom: 2rem;">
  <div class="stat-card">
    <div class="stat-icon">👥</div>
    <div class="stat-value"><%= stats.totalUsers %></div>
    <div class="stat-label"><%= t('dashboard.admin.totalUsers') %></div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">👨‍🎓</div>
    <div class="stat-value"><%= stats.totalStudents %></div>
    <div class="stat-label"><%= t('dashboard.admin.students') %></div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">👨‍🏫</div>
    <div class="stat-value"><%= stats.totalProfessors %></div>
    <div class="stat-label"><%= t('dashboard.admin.professors') %></div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">📚</div>
    <div class="stat-value"><%= stats.totalClasses %></div>
    <div class="stat-label"><%= t('dashboard.admin.totalClasses') %></div>
  </div>
</div>

<div class="grid-2">
  <div class="card">
    <h2><%= t('dashboard.admin.quickActions') %></h2>
    <div style="display: flex; flex-direction: column; gap: 0.75rem;">
      <a href="/admin/security" class="btn btn-primary" style="text-align: center;"><%= t('dashboard.admin.securitySettings') %></a>
      <a href="/admin/audit-logs" class="btn btn-secondary" style="text-align: center;"><%= t('dashboard.admin.viewAuditLogs') %></a>
      <a href="/admin/mfa-setup" class="btn btn-secondary" style="text-align: center;"><%= t('dashboard.admin.configureMfa') %></a>
      <a href="/admin/backups" class="btn btn-secondary" style="text-align: center;"><%= t('dashboard.admin.databaseBackups') %></a>
    </div>
  </div>

  <div class="card">
    <h2><%= t('dashboard.admin.recentLogins') %></h2>
    <% if (stats.recentLogins.length === 0) { %>
      <p style="color: #999;"><%= t('dashboard.admin.noRecentLogins') %></p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th><%= t('dashboard.admin.user') %></th>
            <th><%= t('dashboard.admin.role') %></th>
            <th><%= t('dashboard.admin.lastLogin') %></th>
          </tr>
        </thead>
        <tbody>
          <% stats.recentLogins.forEach(login => { %>
            <tr>
              <td><%= login.username %></td>
              <td style="text-transform: capitalize;"><%= login.role %></td>
              <td><%= formatDate(login.last_login) %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
